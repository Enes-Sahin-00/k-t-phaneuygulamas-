{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-staging-server;Database=kutuphane_staging;User Id=your-user;Password=your-password;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/app-{Date}.txt",
      "LogLevel": {
        "Default": "Information"
      },
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 10
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "DefaultExpirationMinutes": 15,
    "MaxCacheSize": 500
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "BurstLimit": 20
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": 31536000,
    "SessionTimeoutMinutes": 60
  },
  "Swagger": {
    "Enabled": true
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health"
  },
  "Monitoring": {
    "ApplicationInsights": {
      "ConnectionString": "your-staging-app-insights-connection-string"
    }
  }
} 