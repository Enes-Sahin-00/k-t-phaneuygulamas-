{
  "ConnectionStrings": {
    "kütüphaneuygulamasıContext": "Data Source=kütüphaneuygulaması.db"
  },
  "Jwt": {
    "SecretKey": "your-super-secret-key-with-at-least-32-characters-for-security",
    "Issuer": "KütüphaneUygulaması",
    "Audience": "KütüphaneUygulamasıUsers",
    "AccessTokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "DefaultExpirationMinutes": 15,
    "MaxCacheSize": 500
  },
  "RateLimiting": {
    "RequestsPerMinute": 100,
    "BurstLimit": 20
  },
  "Security": {
    "RequireHttps": false,
    "HstsMaxAge": 31536000,
    "SessionTimeoutMinutes": 30
  },
  "Swagger": {
    "Enabled": true
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health"
  }
}
