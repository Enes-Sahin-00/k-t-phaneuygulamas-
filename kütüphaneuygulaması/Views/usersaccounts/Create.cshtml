@model kütüphaneuygulaması.Models.usersaccounts
@{
    Layout = null;
    ViewData["Title"] = "Kayıt Ol";
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Kayıt Ol - Kütüphane</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <style>
        body {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: var(--acik-gri);
        }
        .register-card {
            max-width: 420px;
            width: 100%;
            margin: 2rem auto;
            background: var(--yumusak-beyaz);
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(30,41,59,0.10);
            padding: 2.5rem 2rem 2rem 2rem;
        }
        .register-card h2 {
            font-family: var(--font-baslik);
            color: var(--gece-laciverti);
            font-weight: 700;
            margin-bottom: 1.5rem;
            text-align: center;
        }
        .btn-primary {
            width: 100%;
            margin-top: 1rem;
        }
        .login-link {
            text-align: center;
            margin-top: 1.5rem;
        }
        .alert {
            margin-top: 1rem;
        }
    </style>
</head>
<body>
    <div class="register-card">
        <h2>Kayıt Ol</h2>
        <form asp-action="Create" autocomplete="off">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="display:none"></div>
            <div class="mb-3">
                <label asp-for="name" class="form-label">Kullanıcı Adı</label>
                <input asp-for="name" class="form-control" placeholder="Kullanıcı adınızı girin" required />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="pass" class="form-label">Şifre</label>
                <input asp-for="pass" type="password" class="form-control" placeholder="Şifrenizi girin" required />
                <span asp-validation-for="pass" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="email" class="form-label">E-posta</label>
                <input asp-for="email" type="email" class="form-control" placeholder="E-posta adresinizi girin" required />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Kayıt Ol</button>
        </form>
        <div class="login-link">
            Zaten hesabınız var mı? <a asp-action="login">Giriş Yap</a>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
