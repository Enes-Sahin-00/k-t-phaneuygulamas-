@model IEnumerable<kütüphaneuygulaması.Models.Category>
@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>
    
    @if (ViewBag.Categories != null)
    {
        <div class="row g-4">
            @foreach (var category in ViewBag.Categories)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                    <div class="card h-100 shadow-sm">
                        @if (!string.IsNullOrEmpty(category.ImageUrl))
                        {
                            <img src="~/images/@category.ImageUrl" class="card-img-top" alt="@category.Name" style="height: 200px; object-fit: cover;">
                        }
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@category.Name</h5>
                            <p class="card-text flex-grow-1">@category.Description</p>
                            <a href="@Url.Action("Details", "Category", new { id = category.Id })" class="btn btn-primary mt-auto">Detaylar</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        
        @if (TempData["CategoryCount"] != null)
        {
            <div class="text-center mt-4">
                <p class="text-muted">Toplam @TempData["CategoryCount"] kategori bulundu.</p>
            </div>
        }
    }
    else
    {
        <div class="alert alert-info text-center">
            Henüz kategori bulunmamaktadır.
        </div>
    }
</div> 