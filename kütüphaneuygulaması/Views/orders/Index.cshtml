@model IEnumerable<kütüphaneuygulaması.Models.orders>
@{
    ViewData["Title"] = "Tüm Satışlar";
    // Toplam fiyatı hesaplamak için (varsayım: orders modelinde kitap fiyatı yok, Controller'da ViewBag.TotalSales eklenmeli)
    var totalSales = ViewBag.TotalSales ?? 0;
}
<h1 class="mb-4 text-center">Tüm Satışlar</h1>
<div class="mb-3 text-end">
    <span class="fw-bold" style="font-size:1.2rem; color:var(--canli-turuncu);">Toplam Satış: @totalSales ₺</span>
</div>
<div class="table-responsive">
    <table class="table table-hover align-middle shadow-sm" style="background: var(--yumusak-beyaz); border-radius: 12px; overflow: hidden;">
        <thead class="table-dark" style="background: var(--gece-laciverti); color: var(--yumusak-beyaz);">
            <tr>
                <th>Kitap ID</th>
                <th>Kullanıcı ID</th>
                <th>Adet</th>
                <th>Tarih</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.bookId</td>
                <td>@item.userid</td>
                <td>@item.quantity</td>
                <td>@item.orderdate.ToShortDateString()</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary btn-sm me-1 text-white">Düzenle</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm me-1 text-white">Detay</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm text-white">Sil</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
