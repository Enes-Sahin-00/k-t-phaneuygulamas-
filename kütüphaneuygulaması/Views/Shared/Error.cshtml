@model kütüphaneuygulaması.Models.ErrorViewModel
@{
    ViewData["Title"] = "Hata";
    var errorMessage = ViewBag.ErrorMessage ?? "Beklenmeyen bir hata oluştu.";
    var requestId = ViewBag.RequestId ?? Model?.RequestId ?? "Bilinmiyor";
    var traceId = ViewBag.TraceId;
    var errorDetails = ViewBag.ErrorDetails;
    var isDevelopment = ViewBag.IsDevelopment ?? false;
}

<div class="error-container">
    <div class="error-content">
        <div class="error-icon">
            <i class="fas fa-exclamation-triangle"></i>
        </div>
        
        <h1 class="error-title">Hata Oluştu</h1>
        
        <div class="error-message">
            <p>@errorMessage</p>
            @if (isDevelopment)
            {
                <div class="error-stack-trace">
                    <h4>Hata Detayları:</h4>
                    <pre>@errorDetails</pre>
                </div>
            }
        </div>

        @if (isDevelopment && !string.IsNullOrEmpty(errorDetails))
        {
            <div class="error-details">
                <h3>Hata Detayları (Geliştirme Modu)</h3>
                <pre class="error-stack-trace">@errorDetails</pre>
            </div>
        }

        <div class="error-info">
            <div class="info-item">
                <strong>İstek ID:</strong> <code>@requestId</code>
            </div>
            @if (!string.IsNullOrEmpty(traceId))
            {
                <div class="info-item">
                    <strong>İzleme ID:</strong> <code>@traceId</code>
                </div>
            }
            <div class="info-item">
                <strong>Tarih:</strong> @DateTime.Now.ToString("dd.MM.yyyy HH:mm:ss")
            </div>
        </div>

        <div class="error-actions">
            <a href="@Url.Action("Index", "Home")" class="btn btn-primary">
                <i class="fas fa-home"></i> Ana Sayfa
            </a>
            <a href="javascript:history.back()" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Geri Dön
            </a>
            <button onclick="window.print()" class="btn btn-outline-secondary">
                <i class="fas fa-print"></i> Yazdır
            </button>
        </div>

        <div class="error-help">
            <h4>Yardım</h4>
            <ul>
                <li>Sayfayı yenilemeyi deneyin</li>
                <li>Tarayıcınızın önbelleğini temizleyin</li>
                <li>Daha sonra tekrar deneyin</li>
                <li>Hata devam ederse destek ekibiyle iletişime geçin</li>
            </ul>
        </div>
    </div>
</div>

<style>
.error-container {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
}

.error-content {
    background: white;
    border-radius: 15px;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    padding: 40px;
    max-width: 600px;
    width: 100%;
    text-align: center;
}

.error-icon {
    font-size: 4rem;
    color: #dc3545;
    margin-bottom: 20px;
}

.error-title {
    color: #333;
    font-size: 2rem;
    font-weight: bold;
    margin-bottom: 20px;
}

.error-message {
    background: #f8f9fa;
    border-left: 4px solid #dc3545;
    padding: 15px;
    margin: 20px 0;
    border-radius: 5px;
}

.error-message p {
    margin: 0;
    color: #555;
    font-size: 1.1rem;
}

.error-details {
    margin: 20px 0;
    text-align: left;
}

.error-details h3 {
    color: #333;
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.error-stack-trace {
    background: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 5px;
    padding: 15px;
    font-family: 'Courier New', monospace;
    font-size: 0.9rem;
    color: #666;
    max-height: 200px;
    overflow-y: auto;
    white-space: pre-wrap;
}

.error-info {
    background: #e9ecef;
    border-radius: 8px;
    padding: 20px;
    margin: 20px 0;
    text-align: left;
}

.info-item {
    margin: 10px 0;
    font-size: 0.95rem;
}

.info-item strong {
    color: #495057;
}

.info-item code {
    background: #fff;
    padding: 2px 6px;
    border-radius: 3px;
    font-family: 'Courier New', monospace;
    color: #e83e8c;
}

.error-actions {
    margin: 30px 0;
    display: flex;
    gap: 10px;
    justify-content: center;
    flex-wrap: wrap;
}

.error-actions .btn {
    padding: 10px 20px;
    border-radius: 25px;
    font-weight: 500;
    transition: all 0.3s ease;
}

.error-actions .btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(0,0,0,0.2);
}

.error-help {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 20px;
    margin-top: 20px;
    text-align: left;
}

.error-help h4 {
    color: #333;
    margin-bottom: 15px;
    font-size: 1.1rem;
}

.error-help ul {
    margin: 0;
    padding-left: 20px;
    color: #666;
}

.error-help li {
    margin: 8px 0;
    line-height: 1.5;
}

@@media (max-width: 768px) {
    .error-content {
        padding: 20px;
        margin: 10px;
    }
    
    .error-title {
        font-size: 1.5rem;
    }
    
    .error-actions {
        flex-direction: column;
        align-items: center;
    }
    
    .error-actions .btn {
        width: 100%;
        max-width: 200px;
    }
}

@@media print {
    .error-container {
        background: white;
    }
    
    .error-actions {
        display: none;
    }
    
    .error-help {
        display: none;
    }
}
</style>
