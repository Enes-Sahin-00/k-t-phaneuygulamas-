{
  "ConnectionStrings": {
    "DefaultConnection": "Server=your-production-server;Database=kutuphane_prod;User Id=your-user;Password=your-password;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Warning"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information"
      }
    },
    "File": {
      "Path": "logs/app-{Date}.txt",
      "LogLevel": {
        "Default": "Information"
      },
      "FileSizeLimitBytes": 10485760,
      "RetainedFileCountLimit": 30
    }
  },
  "AllowedHosts": "*",
  "CacheSettings": {
    "DefaultExpirationMinutes": 30,
    "MaxCacheSize": 1000
  },
  "RateLimiting": {
    "RequestsPerMinute": 60,
    "BurstLimit": 10
  },
  "Security": {
    "RequireHttps": true,
    "HstsMaxAge": 31536000,
    "SessionTimeoutMinutes": 30
  },
  "Swagger": {
    "Enabled": false
  },
  "HealthChecks": {
    "Enabled": true,
    "Endpoint": "/health"
  },
  "Monitoring": {
    "ApplicationInsights": {
      "ConnectionString": "your-app-insights-connection-string"
    }
  }
} 